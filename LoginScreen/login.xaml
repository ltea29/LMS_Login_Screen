<Window x:Class="LoginScreen.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginScreen"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="700" FontSize="14" Background="Black">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel>
            <Label Content="Learning Management System" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" HorizontalAlignment="Center"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18" Width="300" HorizontalAlignment="Center" Margin="5 0"/>
            <Label Content="Password" Foreground="White" HorizontalAlignment="Center"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18" Width="300" HorizontalAlignment="Center" Margin="5 0"/>
            <Button x:Name="btnSubmit" Click="btnSubmit_Click" Content="Login" Background="#545d6a" Foreground="White" FontSize="18" Width="100" HorizontalAlignment="Center" Margin="5 20"/>
        </StackPanel>
    </Border>
</Window>
