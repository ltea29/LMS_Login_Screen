<Window x:Class="LoginScreen.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginScreen"
        mc:Ignorable="d"
        Title="Student" Height="450" Width="700" FontSize="14" Background="Black">
           
    <StackPanel>
        <Label Content="Student's Dashboard" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
        <Button Content="Log Out" Click="Button_Click" Height="24" HorizontalAlignment="Left" Width="100" Margin="10 5"/>
        <DataGrid Height="30" Width="200" HorizontalAlignment="Left" Margin="30 10" SelectionChanged="DataGrid_SelectionChanged"/>
        <Label Content="Current Courses" FontSize="14" Background="White" Width="110" HorizontalAlignment="Left" Margin="30 5"/>
        <DataGrid Height="100" Width="300" HorizontalAlignment="Left" Margin="30 0" SelectionChanged="DataGrid_SelectionChanged"/>
    
    </StackPanel>
</Window>
